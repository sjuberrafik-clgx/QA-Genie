{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "grounding-config.schema.json",
    "title": "Grounding Configuration Schema",
    "description": "Customizable local context grounding configuration for LLM-powered QA automation. Each project defines its domain knowledge, feature map, and retrieval settings here.",
    "type": "object",
    "required": [
        "version",
        "project"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "description": "JSON Schema reference for validation"
        },
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semantic version of the configuration format"
        },
        "project": {
            "type": "object",
            "required": [
                "id",
                "applicationName"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[a-z0-9][a-z0-9_-]*$",
                    "description": "Unique project identifier (lowercase, alphanumeric with hyphens/underscores)"
                },
                "applicationName": {
                    "type": "string",
                    "description": "Human-readable application name"
                },
                "applicationDescription": {
                    "type": "string",
                    "description": "Brief description of the application under test"
                },
                "primaryUrl": {
                    "type": "string",
                    "format": "uri",
                    "description": "Primary application URL"
                },
                "authMethod": {
                    "type": "string",
                    "enum": [
                        "token-url",
                        "form-login",
                        "sso",
                        "api-key",
                        "none"
                    ],
                    "description": "Authentication method used by the application"
                },
                "authNotes": {
                    "type": "string",
                    "description": "Additional notes about authentication patterns"
                }
            }
        },
        "featureMap": {
            "type": "array",
            "description": "Structured feature-to-page-to-component mapping for the application",
            "items": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Feature name (e.g., 'Property Search')"
                    },
                    "description": {
                        "type": "string",
                        "description": "What this feature does"
                    },
                    "pages": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "URL paths where this feature is accessible"
                    },
                    "pageObjects": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Page object files that model this feature's UI"
                    },
                    "businessFunctions": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Business function files with reusable flows for this feature"
                    },
                    "keywords": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Search keywords that identify this feature in queries"
                    }
                }
            }
        },
        "domainTerminology": {
            "type": "object",
            "description": "Project-specific terms and their definitions. Keys are abbreviations/terms, values are explanations.",
            "additionalProperties": {
                "type": "string"
            }
        },
        "customGroundingRules": {
            "type": "array",
            "description": "User-defined grounding snippets that get high-priority injection into agent context. These are always included regardless of query relevance.",
            "items": {
                "type": "string"
            }
        },
        "indexSources": {
            "type": "array",
            "description": "Directories and files to index for grounding retrieval",
            "items": {
                "type": "object",
                "required": [
                    "path",
                    "type"
                ],
                "properties": {
                    "path": {
                        "type": "string",
                        "description": "Relative path from project root"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "pageObject",
                            "businessFunction",
                            "utility",
                            "config",
                            "testData",
                            "exploration",
                            "custom"
                        ],
                        "description": "Content type classification for retrieval boosting"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "indexSettings": {
            "type": "object",
            "description": "Controls how source files are chunked and indexed",
            "properties": {
                "chunkSize": {
                    "type": "number",
                    "default": 80,
                    "minimum": 20,
                    "maximum": 500,
                    "description": "Number of lines per chunk"
                },
                "chunkOverlap": {
                    "type": "number",
                    "default": 20,
                    "minimum": 0,
                    "maximum": 100,
                    "description": "Number of overlapping lines between adjacent chunks"
                },
                "maxIndexEntries": {
                    "type": "number",
                    "default": 5000,
                    "minimum": 100,
                    "maximum": 50000,
                    "description": "Maximum number of chunks in the index"
                },
                "classAwareChunking": {
                    "type": "boolean",
                    "default": true,
                    "description": "Keep class methods together in chunks (prevents splitting mid-method)"
                },
                "extractMethodSignatures": {
                    "type": "boolean",
                    "default": true,
                    "description": "Extract and index method signatures for precise retrieval"
                },
                "extractLocators": {
                    "type": "boolean",
                    "default": true,
                    "description": "Extract and index locator definitions from page objects"
                },
                "fileExtensions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ".js",
                        ".json"
                    ],
                    "description": "File extensions to include in indexing"
                },
                "excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        "package-lock"
                    ],
                    "description": "File/directory name patterns to exclude"
                }
            }
        },
        "retrievalSettings": {
            "type": "object",
            "description": "Controls how queries are matched and results are ranked",
            "properties": {
                "maxChunksPerQuery": {
                    "type": "number",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 50,
                    "description": "Maximum chunks returned per query"
                },
                "minRelevanceScore": {
                    "type": "number",
                    "default": 0.12,
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Minimum BM25 score to include a chunk in results"
                },
                "boostFactors": {
                    "type": "object",
                    "description": "Multipliers for different match types",
                    "properties": {
                        "exactMatch": {
                            "type": "number",
                            "default": 3.0
                        },
                        "fileNameMatch": {
                            "type": "number",
                            "default": 2.0
                        },
                        "methodNameMatch": {
                            "type": "number",
                            "default": 2.5
                        },
                        "locatorMatch": {
                            "type": "number",
                            "default": 2.0
                        },
                        "featureKeywordMatch": {
                            "type": "number",
                            "default": 1.5
                        }
                    }
                },
                "agentBoosts": {
                    "type": "object",
                    "description": "Per-agent keyword boost terms. When an agent queries, these terms get additional weight.",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "selectorRegistry": {
            "type": "object",
            "description": "Centralized selector knowledge base configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "priorityOrder": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Selector types ranked by preference (most stable first)"
                },
                "reliabilityScores": {
                    "type": "object",
                    "description": "Reliability score (0-1) for each selector type",
                    "additionalProperties": {
                        "type": "number"
                    }
                }
            }
        },
        "explorationFreshness": {
            "type": "object",
            "description": "Controls TTL and staleness for MCP exploration data",
            "properties": {
                "maxAgeDays": {
                    "type": "number",
                    "default": 14,
                    "description": "Exploration data older than this is considered stale"
                },
                "warnAgeDays": {
                    "type": "number",
                    "default": 7,
                    "description": "Warn when exploration data is older than this"
                },
                "autoInvalidate": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically discard stale exploration data"
                }
            }
        },
        "knowledgeBase": {
            "type": "object",
            "description": "Dynamic Knowledge Base connector configuration. Fetches real-time context from external knowledge sources (Confluence, Notion, SharePoint, custom REST) and integrates with local grounding.",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Master toggle for Knowledge Base integration"
                },
                "providers": {
                    "type": "array",
                    "description": "List of KB providers to connect to. Multiple providers are queried in priority order.",
                    "items": {
                        "type": "object",
                        "required": [
                            "type",
                            "name"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "confluence",
                                    "notion",
                                    "sharepoint",
                                    "custom"
                                ],
                                "description": "Provider type"
                            },
                            "name": {
                                "type": "string",
                                "description": "Human-readable provider name"
                            },
                            "enabled": {
                                "type": "boolean",
                                "default": true,
                                "description": "Whether this provider is active"
                            },
                            "priority": {
                                "type": "number",
                                "default": 1,
                                "description": "Query priority (lower = higher priority)"
                            },
                            "baseUrl": {
                                "type": "string",
                                "description": "Base URL for the API. Falls back to env var."
                            },
                            "spaceKeys": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Confluence/Notion space keys to search within"
                            },
                            "labels": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Filter results by labels/tags"
                            },
                            "ancestorPageIds": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Restrict search to descendants of these page IDs"
                            },
                            "auth": {
                                "type": "object",
                                "description": "Auth config for custom providers",
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "basic",
                                            "bearer",
                                            "api-key"
                                        ],
                                        "description": "Authentication type"
                                    },
                                    "tokenEnvVar": {
                                        "type": "string",
                                        "description": "Environment variable name containing the token"
                                    },
                                    "usernameEnvVar": {
                                        "type": "string",
                                        "description": "Environment variable name for username (basic auth)"
                                    },
                                    "passwordEnvVar": {
                                        "type": "string",
                                        "description": "Environment variable name for password (basic auth)"
                                    },
                                    "headerName": {
                                        "type": "string",
                                        "description": "Custom header name for API key auth"
                                    }
                                }
                            },
                            "endpoints": {
                                "type": "object",
                                "description": "Endpoint configuration for custom providers",
                                "additionalProperties": {
                                    "type": "object",
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "method": {
                                            "type": "string",
                                            "enum": [
                                                "GET",
                                                "POST"
                                            ]
                                        },
                                        "queryParam": {
                                            "type": "string"
                                        },
                                        "resultsPath": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "responseMapping": {
                                "type": "object",
                                "description": "Maps API response fields to KBResult fields for custom providers",
                                "additionalProperties": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "cache": {
                    "type": "object",
                    "description": "Local cache configuration for KB content",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": true,
                            "description": "Enable local caching of KB pages"
                        },
                        "ttlMinutes": {
                            "type": "number",
                            "default": 30,
                            "minimum": 1,
                            "description": "Time-to-live for cached pages in minutes"
                        },
                        "maxEntries": {
                            "type": "number",
                            "default": 200,
                            "minimum": 10,
                            "description": "Maximum cached pages before LRU eviction"
                        },
                        "searchCacheTtlMinutes": {
                            "type": "number",
                            "default": 5,
                            "minimum": 1,
                            "description": "TTL for search result caching (shorter than page cache)"
                        },
                        "persistPath": {
                            "type": "string",
                            "default": "knowledge-base-data/kb-cache.json",
                            "description": "Path for cache persistence file (relative to agentic-workflow/)"
                        }
                    }
                },
                "intentDetection": {
                    "type": "object",
                    "description": "Automatic intent detection â€” decides when to fetch KB content",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": true,
                            "description": "Enable automatic intent detection"
                        },
                        "confidenceThreshold": {
                            "type": "number",
                            "default": 0.3,
                            "minimum": 0,
                            "maximum": 1,
                            "description": "Minimum confidence score to trigger KB fetch (0-1)"
                        },
                        "domainTerms": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Project-specific domain terms that indicate KB relevance"
                        },
                        "triggerTerms": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Generic terms that indicate knowledge-seeking intent"
                        }
                    }
                },
                "retrieval": {
                    "type": "object",
                    "description": "Controls how much KB content is included in agent context",
                    "properties": {
                        "maxResults": {
                            "type": "number",
                            "default": 10,
                            "minimum": 1,
                            "description": "Maximum results per query"
                        },
                        "maxContentChars": {
                            "type": "number",
                            "default": 4000,
                            "minimum": 500,
                            "description": "Character budget for KB content within grounding context"
                        },
                        "includeChildPages": {
                            "type": "boolean",
                            "default": true,
                            "description": "Fetch child pages when retrieving a page tree"
                        },
                        "childPageDepth": {
                            "type": "number",
                            "default": 2,
                            "minimum": 1,
                            "maximum": 5,
                            "description": "How deep to traverse page hierarchies"
                        },
                        "boostFactors": {
                            "type": "object",
                            "description": "Score multipliers for result ranking",
                            "properties": {
                                "titleMatch": {
                                    "type": "number",
                                    "default": 2.0
                                },
                                "labelMatch": {
                                    "type": "number",
                                    "default": 1.5
                                },
                                "recentlyUpdated": {
                                    "type": "number",
                                    "default": 1.2
                                }
                            }
                        }
                    }
                },
                "sync": {
                    "type": "object",
                    "description": "Pre-indexing and synchronization settings",
                    "properties": {
                        "autoSyncOnStart": {
                            "type": "boolean",
                            "default": false,
                            "description": "Pre-fetch key pages when pipeline starts"
                        },
                        "syncIntervalMinutes": {
                            "type": "number",
                            "default": 0,
                            "description": "Periodic sync interval (0 = disabled)"
                        },
                        "syncPageIds": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Specific page IDs to pre-sync"
                        },
                        "syncSpaceKeys": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Space keys to sync (overrides provider defaults)"
                        }
                    }
                }
            }
        }
    }
}